{
  "manifest_version": 3,
  "name": "YouTube RAG Assistant",
  "version": "1.0.0",
  "description": "Ask questions about the current YouTube video using your RAG backend.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:8000/*",
    "https://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube RAG Assistant"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ]
}